# Copy this file to .env.local for development
# and fill in the secrets with values for your environment.

# PostgreSQL connection string used by Prisma
DATABASE_URL="postgresql://USER:PASSWORD@HOST:PORT/DATABASE"

# NextAuth configuration
# Generate a 32-64 character string (e.g. using `openssl rand -hex 32`).
NEXTAUTH_SECRET="replace-with-strong-secret"
# Base URL of the app (http://localhost:3000 for dev)
NEXTAUTH_URL="http://localhost:3000"

# OpenAI API key for chat assistant functionality
OPENAI_API_KEY="sk-your-openai-key"
